<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title> To Do List </title>
        <link rel="icon" type="image/svg+xml" href="./images/icon.png" />
        <link rel="stylesheet" href="./css/style.css">
    </head>
    <body>
        <main>
            <div class="box" id="heading">

                <h1><%= kindOfDay %></h1>

            </div>

            <!-- using a single li tag won't create new list for every item -->
            
            <div class="box">

                <% for(let i=0; i<newListItem.length; i++){ %>
                    <form action="/delete" method="post">
                        
                        <div class="item">
                            <input type="checkbox" name="check" value="<%=newListItem[i]._id%>" onChange="this.form.submit()">
                            <p class="i"><%= newListItem[i].name %></p>
                            <!-- <button type="button" class="i"> <img src="./images/delete.png"> </button> -->
                        </div>  

                    </form>  
                <% } %>

                <form class="item" action="/" method="post">
                    <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
                    <button type="submit"> + </button>
                </form>

            </div>
            
            
        </main>
    </body>
</html>
